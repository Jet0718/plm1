<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_attachfileprj_form_inherit" model="ir.ui.view">
            <field name="name">ir.attachment_plm.form</field>
            <field name="model">ir.attachment</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="plm.view_attachment_form_plm_hinerit" />
            <field name="arch" type="xml">             
                <!-- <xpath expr="//header" position="inside">
                    <field name="state" widget="statusbar" statusbar_visible="Draft,Review,Released,InChange,Superseded" />
                </xpath>  -->
                  <!-- #将状态改成管道状态列 -->
                <xpath expr="//header" position="inside">
                    <field name="engineering_state" widget="statusbar" statusbar_visible="draft,confirmed,released,undermodify,obsoleted"/>   
                </xpath>      
                <field name="preview" position="after">   
                        <!-- <field name="item_number"  /> --> 
                        <p/>  
                        <field name="owner"  />
                        <field name="active"  />
                         <field name="cnis_current"  />
                </field>
                <!-- ebert button_box 顶部添加按钮 -->    
                <div name="button_box" position="inside">
                    <button string="versions"  icon="fa-sitemap" class="oe_stat_button" type="object"   name="action_openfileversions"/>                  
                </div> 
                 <xpath expr="//notebook" position="inside">    
                    <page string="项目">
                        <field name="cn_file2prj" >
                            <tree> 
                                <field name="name" />
                            </tree> 
                        </field>
                    </page> 
                    <page string="产品">
                        <field name="cn_file2prd" >
                            <tree> 
                                <field name="item_number" />
                                <field name="name" />
                            </tree> 
                        </field>
                    </page>  
                    <page string="子阶工程图">
                        <field name="cn_cadfile_ships" >
                            <tree  editable="bottom"> 
                                <field name="preview"
	                    	       widget="image"
	                    	       options="{'zoom': true, 'zoom_delay': 200}"
	                    	       nolabel="1"
	                    	       readonly="True"/>
                                <field name="irattachment_id" />
                                <field name="engineering_code" />
                                <field name="engineering_revision" />
                                <field name="name" />
                                <field name="type" />
                            </tree> 
                        </field>
                    </page>       
                </xpath>                
            </field> 
        </record>

       
        <record id="view_attachment_tree_inheritcn" model="ir.ui.view">
            <field name="name">ir.attachmentinhert.tree</field>
            <field name="model">ir.attachment</field>
            <field name="inherit_id" ref="base.view_attachment_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                        <field name="engineering_code" string="engineering code"/>
                        <field name="engineering_revision" string="engineering revision"/>
                        <field name="engineering_state" string="engineering state"/>
                </xpath>                 
            </field>
        </record>
    </data>
</odoo>


