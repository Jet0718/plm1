<?xml version="1.0" encoding="UTF-8"?>
<template xml:space="preserve">
    <t t-name="IssueDashboard">
        <div class="vh-100 overflow-auto bg-muted">
            <div class="row m-3">
                <div class="col-lg-7" style="width: 100%;">
                    <div class="row" >
                        <div class="col m-0 p-0">
                            <div >
                                <div class="d-flex align-item-center justify-content-between">
                                    <h1 class="text-primary fw-blod">Issue Dashboards</h1>
                                    <div>
                                        <select class="form-select" id="datas">
                                           <option value="0">Select Period</option>
                                           <option value="7">Last 7 Days</option>
                                           <option value="30">Last 30 Days</option>
                                           <option value="90">Last 90 Days</option>
                                           <option value="365">Last 365 Days</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>                    
                    <div class="shadow-sm border m-2 p-2 bg-white">
                        <h1 class="text-primary fw-blod">問題來源數量</h1>
                        <div class="row">
                            <!--來源:客戶,個數-->
                            <div id="customer" class="col-md-4 col-sm-6 tot_tasks oh-payslip"
                                style=" overflow: hidden; padding-top: 30px;width: 33.3%; ">
                                <div class="oh-card" style="box-shadow:2px 4px 8px 2px rgba(0,0,0.3,0.2);
                                display: flex; justify-content: center;" role="button">
                                    <div class="oh-card-body"
                                        style="padding: 5px 5px; float: left; width: 100%;
                                        height: auto; box-sizing: border-box; margin: 0;">
                                        <div class="stat-widget-one">
                                            <div class="stat-icon bg-mauve-light d-flex justify-content-left align-items-left">
                                                <div style="background:yellow; width:65px; text-align: center;">
                                                    <i class="fa fa-child  text-mauve"
                                                    style="font-size:50px;"/>
                                                </div>
                                                <div class="stat-content" style="
                                                text-align: center; font-weight: bold;
                                                padding-top: 20px; padding-left: 80px;">
                                                    <div class="stat_count_opp"
                                                        style="font-size: 17px;">
                                                        <span id="templates">
                                                            <span id="source_customer"/>
                                                        </span>
                                                    </div>
                                                    <div class="stat-head"
                                                        style="font-size: 14px;">客戶
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>                    
                            <!--來源:內部,個數-->
                            <div id="internal" class="col-md-4 col-sm-6 tot_tasks oh-payslip"
                                style=" overflow: hidden; padding-top: 30px;width: 33.3%;">
                                <div class="oh-card" style="box-shadow:2px 4px 8px 2px rgba(0,0,0.3,0.2);
                                display: flex; justify-content: center;" role="button">
                                    <div class="oh-card-body"
                                        style="padding: 5px 5px; float: left; width: 100%;
                                        height: auto; box-sizing: border-box; margin: 0;">
                                        <div class="stat-widget-one">
                                            <div class="stat-icon bg-mauve-light d-flex justify-content-left align-items-left">
                                                <div style="background:red; width:65px; text-align: center;">
                                                    <i class="fa fa-university  text-mauve"
                                                    style="font-size:50px;"/>
                                                </div>
                                                <div class="stat-content" style="
                                                text-align: center; font-weight: bold;
                                                padding-top: 20px; padding-left: 80px;">
                                                    <div class="stat_count_opp"
                                                        style="font-size: 17px;">
                                                        <span id="templates">
                                                            <div id="source_internal"/>
                                                        </span>
                                                    </div>
                                                    <div class="stat-head"
                                                        style="font-size: 14px;">內部
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>                                     
                            <!--來源:供應商,個數-->
                            <div id="supplier" class="col-md-4 col-sm-6 tot_tasks oh-payslip"
                                style=" overflow: hidden; padding-top: 30px;width: 33.3%;">
                                <div class="oh-card" style="box-shadow:2px 4px 8px 2px rgba(0,0,0.3,0.2);
                                display: flex; justify-content: center;" role="button">
                                    <div class="oh-card-body"
                                        style="padding: 5px 5px; float: left; width: 100%;
                                        height: auto; box-sizing: border-box; margin: 0;">
                                        <div class="stat-widget-one">
                                            <div class="stat-icon bg-mauve-light d-flex justify-content-left align-items-left">
                                                <div style="background:blue; width:65px; text-align: center;">
                                                    <i class="fa fa-industry  text-mauve"
                                                    style="font-size:50px;"/>
                                                </div>
                                                <div class="stat-content" style="
                                                text-align: center; font-weight: bold;
                                                padding-top: 20px; padding-left: 80px;">
                                                    <div class="stat_count_opp"
                                                        style="font-size: 17px;">
                                                        <span id="templates">
                                                            <span id="source_supplier"/>
                                                        </span>
                                                    </div>
                                                    <div class="stat-head"
                                                        style="font-size: 14px;">供應商
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            
                        </div>

                       
                    </div>  
                     <div class="row col m-0 p-0">
                            <div class="col-lg-4 m-0 p-0" style="width: 30.8%;">
                                <div class="shadow-sm border m-2 p-4 bg-white">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <h3 class="text-primary fw-bold">Issue Tags</h3>
                                        <!-- <div class="px-3 py-1 bg-primary cursor-pointer">
                                            <span class="fa fa-arrow-right text-white"/>
                                        </div> -->
                                    </div>
                                    <!-- <ChartRenderer type="'doughnut'" title="'Top Products Report'"/> -->
                                    <ChartRendererisutag type="'doughnut'" />
                                </div>
                             </div>
                             <!-- 中间间隔 -->
                             <div style="width: 9.2%;"><div class=""><div class="d-flex align-items-center justify-content-between"><h3 class="text-primary fw-bold"> </h3></div></div></div>

                             <div class="col-lg-4 m-0 p-0" style="width: 60%;text-align: right;">
                                <div class="shadow-sm border m-2 p-4 bg-white">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <h3 class="text-primary fw-bold">Issue Product Max</h3>
                                        <!-- <div class="px-3 py-1 bg-primary cursor-pointer">
                                            <span class="fa fa-arrow-right text-white"/>
                                        </div> -->
                                    </div>
                                    <!-- <ChartRenderer type="'doughnut'" title="'Top Products Report'"/> -->
                                    <ChartRendererissueprdmax type="'doughnut'" />
                                </div>
                             </div>
                    </div>
                       
                </div>
            </div>
        </div>
    </t>
</template>